<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <!-- Shadow layer -->
            <item android:left="10dp" android:top="10dp">
                <shape android:shape="rectangle">
                    <!-- Replace this with a valid color -->
                    <solid android:color="#50000000"/> <!-- Semi-transparent black for shadow effect -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>

            <!-- Main content layer -->
            <item android:right="5dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#5F93D7"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>